set number
set wrap
set linebreak
set mouse=a
set visualbell
set autoindent
set smartindent
set softtabstop=4 expandtab shiftwidth=4 smarttab
set hlsearch
set incsearch
set smartcase
set virtualedit=all
set undofile
set undodir=~/.vim/undodir

set foldmethod=indent
set foldlevel=1
set foldlevelstart=99

set laststatus=2
set statusline+=%F

syntax enable
set term=screen-256color
set t_Co=256
colorscheme monokai
